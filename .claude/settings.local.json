{
  "permissions": {
    "allow": [
      "Bash(python3:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/post-task.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "ask_user",
        "hooks": [
          {
            "type": "command",
            "command": "say 'Hello'"
          }
        ]
      }
    ]
  },
  "outputStyle": "default"
}